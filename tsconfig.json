{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2021",
		"module": "umd",
		"outDir": "src/js",
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"src/ts/*"
	],
	"exclude": [
		"node_modules/*"
	]
}