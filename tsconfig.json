{
	"compileOnSave": true,
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"outDir": "src/js",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/ts/*"
	],
	"exclude": [
		"node_modules"
	]
}