{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "js",
		"sourceMap": true,
		"pretty": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"ts/*"
	],
	"exclude": [
		"node_modules/*"
	]
}
