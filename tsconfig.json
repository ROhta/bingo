{
	"compileOnSave": true,
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"outDir": "src/js",
		"sourceMap": true,
		"removeComments": true,
		"isolatedModules": false,
		"noEmitOnError": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	},
	"include": ["src/ts/*"],
	"exclude": ["node_modules"]
}
